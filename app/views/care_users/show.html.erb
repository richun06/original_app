<div class="container">
  <h1>利用者　詳細画面</h1>

  <p>
    <strong></strong>
    <% if @care_user.image? %>
      <%= image_tag @care_user.image.url, size: "150x150" %>
    <% else %>
      <%#= image_tag 'user.icon.png', size: "150x130" %>
      <%= image_tag asset_path("user.icon.png"), size: "150x150" %>
    <% end %>
  </p>

  <p>
    <div class="hhh">
      <strong class="title">名前</strong>
    </div>
    <%= @care_user.name %>
  </p>

  <p>
    <div class="hhh">
      <strong class="title">生年月日</strong>
    </div>
    <%= @care_user.birthday.strftime("%Y年 %m月 %d日") %>
  </p>

  <p>
    <div class="hhh">
      <strong class="title">年齢</strong>
    </div>
    <%= @care_user.age %>歳
  </p>

  <p>
    <div class="hhh">
      <strong class="title">性別</strong>
    </div>
    <%= @care_user.sex %>
  </p>

  <% if current_user.owner_id != nil %>
    <p>
      <strong class="title">現在の利用</strong>
      <%= @care_user.availability %>
    </p>
    <p>
      <strong class="title">区分</strong>
      <%= @care_user.division %>
    </p>
  <% end %>

  <%= link_to "戻る",care_users_path %>
  <%= link_to "編集",edit_care_user_path(@care_user.id) %>
</div>